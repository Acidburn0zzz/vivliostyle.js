{
  "name": "vivliostyle",
  "description": "Library for HTML+CSS typesetting and rich paged viewing with EPUB/Web publications support",
  "scripts": {
    "bootstrap": "lerna bootstrap && lerna run build --scope @vivliostyle/core",
    "build": "lerna run build",
    "clean": "lerna run clean",
    "dev": "lerna run dev --parallel",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "ship": "lerna publish from-package",
    "ship:canary": "lerna publish --canary",
    "test": "lerna run test --parallel",
    "test-sauce": "lerna run test-sauce",
    "version:amend": "git tag --points-at HEAD | xargs -I{} git tag --delete {} && git reset --hard HEAD^",
    "version:manual": "lerna version --changelog-preset=angular --create-release github",
    "version:manual:dry": "lerna version --changelog-preset=angular --no-git-tag-version --no-push --no-commit-hooks",
    "version:prerelease": "lerna version --conventional-commits --conventional-prerelease --changelog-preset=angular --create-release github",
    "version:prerelease:dry": "lerna version --conventional-commits --conventional-prerelease --changelog-preset=angular --no-git-tag-version --no-push --no-commit-hooks",
    "version:up": "lerna version --conventional-commits --changelog-preset=angular --create-release github",
    "version:up:dry": "lerna version --conventional-commits --changelog-preset=angular --no-git-tag-version --no-push --no-commit-hooks"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "shx": "^0.3.2"
  },
  "author": "Vivliostyle Foundation",
  "license": "AGPL-3.0",
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint && pretty-quick --staged"
    }
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/vivliostyle/vivliostyle.git"
  },
  "workspaces": [
    "packages/*"
  ]
}
