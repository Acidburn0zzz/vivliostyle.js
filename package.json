{
  "name": "vivliostyle",
  "description": "Library for HTML+CSS typesetting and rich paged viewing with EPUB/Web publications support",
  "version": "2019.11.100-pre",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "dev": "lerna run dev --parallel",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "test": "lerna run test",
    "test-sauce": "lerna run test-sauce"
  },
  "devDependencies": {
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "shx": "^0.3.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/vivliostyle/vivliostyle.git"
  },
  "workspaces": [
    "packages/*"
  ]
}
