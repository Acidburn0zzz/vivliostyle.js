{
  "name": "vivliostyle",
  "description": "Library for HTML+CSS typesetting and rich paged viewing with EPUB/Web publications support",
  "scripts": {
    "bootstrap": "lerna bootstrap && yarn clean && yarn build-dev",
    "build": "lerna run build",
    "build-dev": "lerna run build-dev",
    "clean": "lerna run clean",
    "dev": "lerna run dev --parallel",
    "format": "lerna run format",
    "lint": "lerna run lint",
    "preship": "yarn clean && yarn build",
    "ship": "lerna publish from-package",
    "ship:canary": "lerna publish --canary",
    "ship:pre": "yarn ship --dist-tag next",
    "test": "lerna run test --parallel",
    "test-sauce": "lerna run test-sauce",
    "version:amend": "git tag --points-at HEAD | xargs -I{} git tag --delete {} && git reset --hard HEAD^",
    "version:bump": "lerna version --conventional-commits --create-release github",
    "version:bump:dry": "yarn version:bump --no-git-tag-version --no-push --no-commit-hooks",
    "version:graduate": "lerna version --conventional-commits --conventional-graduate --create-release github",
    "version:manual": "lerna version",
    "version:manual:dry": "yarn version:manual --no-git-tag-version --no-push --no-commit-hooks",
    "version:pre": "lerna version --conventional-commits --conventional-prerelease --create-release github",
    "version:pre:dry": "yarn version:pre --no-git-tag-version --no-push --no-commit-hooks"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "pretty-quick": "^2.0.1",
    "shx": "^0.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && pretty-quick --staged"
    }
  },
  "author": "Vivliostyle Foundation",
  "license": "AGPL-3.0",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/vivliostyle/vivliostyle.git"
  },
  "workspaces": [
    "packages/*"
  ]
}
