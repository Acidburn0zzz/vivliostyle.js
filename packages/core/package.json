{
  "name": "@vivliostyle/core",
  "description": "Library for HTML+CSS typesetting and rich paged viewing with EPUB/Web publications support",
  "version": "2019.11.100-pre",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "build-debug": "NODE_ENV=debug webpack",
    "build-dev": "NODE_ENV=development webpack",
    "dev": "NODE_ENV=development webpack -w",
    "format": "prettier --write \"{src,test,scripts}/**/*.{html,js,css}\"",
    "lint": "eslint --ext .ts src",
    "test": "karma start test/conf/karma-local.conf.js",
    "test-sauce": "test -z \"$SAUCE_USERNAME\" || karma start test/conf/karma-sauce.conf.js",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "circular-dependency-plugin": "^5.2.0",
    "eslint": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "fast-diff": "^1.2.0",
    "jasmine-core": "^3.4.0",
    "karma": "^4.3.0",
    "karma-cli": "^2.0.0",
    "karma-jasmine": "^2.0.1",
    "karma-sauce-launcher": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript-preprocessor": "^0.4.0",
    "karma-verbose-reporter": "0.0.6",
    "karma-webpack": "^4.0.2",
    "mustache": "^3.1.0",
    "parcel-bundler": "^1.12.4",
    "prettier": "^1.18.2",
    "raw-loader": "^3.1.0",
    "ts-loader": "^6.1.0",
    "typescript": "^3.6.3",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9"
  },
  "author": "Vivliostyle Foundation",
  "license": "AGPL-3.0",
  "main": "lib/vivliostyle-es5.min.js",
  "bugs": {
    "url": "https://github.com/vivliostyle/vivliostyle.js/issues"
  },
  "files": [
    "doc/supported-features.md",
    "doc/supported-features.html",
    "lib",
    "resources",
    "samples",
    "plugins/*/resources"
  ],
  "homepage": "https://github.com/vivliostyle/vivliostyle.js",
  "module": "lib/vivliostyle.min.js",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vivliostyle/vivliostyle.js.git"
  }
}
