{
  "name": "@vivliostyle/core",
  "description": "Library for HTML+CSS typesetting and rich paged viewing with EPUB/Web publications support",
  "version": "2019.11.100-pre",
  "scripts": {
    "build": "yarn clean && run-p build:*",
    "build-dev": "NODE_ENV=development rollup -c",
    "build-documents": "./scripts/build-documents.sh",
    "build:cjs": "NODE_ENV=production rollup -c",
    "clean": "shx rm -rf lib/* browser .cache",
    "dev": "NODE_ENV=development rollup -c -w",
    "format": "prettier --write \"{*.{js,md,json},{src,types,test,resources}/**/*.{ts,js,html}}\"",
    "lint": "eslint src --fix --ext .ts -f codeframe",
    "test": "karma start test/conf/karma-local.conf.js",
    "test-sauce": "test -z \"$SAUCE_USERNAME\" || karma start test/conf/karma-sauce.conf.js",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@rollup/plugin-replace": "^2.2.1",
    "@rollup/plugin-typescript": "^2.0.1",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "@wessberg/rollup-plugin-ts": "^1.1.83",
    "circular-dependency-plugin": "^5.2.0",
    "dts-bundle": "^0.7.3",
    "dts-bundle-webpack": "^1.0.2",
    "eslint": "^6.4.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.0",
    "fast-diff": "^1.2.0",
    "jasmine-core": "^3.4.0",
    "karma": "^4.3.0",
    "karma-cli": "^2.0.0",
    "karma-jasmine": "^2.0.1",
    "karma-sauce-launcher": "^2.0.2",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-typescript-preprocessor": "^0.4.0",
    "karma-verbose-reporter": "0.0.6",
    "karma-webpack": "^4.0.2",
    "mustache": "^3.1.0",
    "parcel-bundler": "^1.12.4",
    "raw-loader": "^4.0.0",
    "rollup": "^1.19.4",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "rollup-plugin-string": "^3.0.0",
    "rollup-plugin-strip": "^1.2.2",
    "rollup-plugin-terser": "^5.1.1",
    "rollup-plugin-typescript2": "^0.25.3",
    "ts-loader": "^6.1.0",
    "typescript": "^3.6.3",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9"
  },
  "types": "lib/cjs/vivliostyle.d.ts",
  "module": "lib/esm/vivliostyle.js",
  "main": "lib/cjs/vivliostyle.js",
  "unpkg": "lib/vivliostyle.js",
  "author": "Vivliostyle Foundation",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/vivliostyle/vivliostyle/issues"
  },
  "files": [
    "doc/supported-features.md",
    "doc/supported-features.html",
    "lib",
    "resources",
    "plugins/*/resources"
  ],
  "homepage": "https://github.com/vivliostyle/vivliostyle/packages/core",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vivliostyle/vivliostyle.git"
  }
}
